<%= load "./code_style.rb" %>
<%= Rouge::Themes::CorrectGithub.render(scope: '.highlight') %>

$code-font: Consolas, "Liberation Mono", Menlo, Courier, monospace;

pre.highlight {
  padding: 16px;
  overflow: auto;
  font-size: 85%;
  line-height: 1.45;
  background-color: #f7f7f7;
  color: #333;
  border-radius: 3px;
  code {
    font: 12px $code_font;
  }
}